<Page x:Class="CarSelect.Pages.TariffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarSelect.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TariffPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBox x:Name="tbName" Text="{Binding Tariff.Name}"/>
            <TextBox x:Name="tbDescription" Text="{Binding Tariff.Description}"/>
            <TextBox x:Name="tbPrice" Text="{Binding Tariff.Price}"/>
        </StackPanel>
        
    </Grid>
</Page>
