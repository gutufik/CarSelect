<Page x:Class="CarSelect.Pages.RequestsByStatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarSelect.Pages"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RequestsByStatePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Заявки по состоянию" FontSize="24" HorizontalAlignment="Center" Margin="0,20"/>

        <lvc:PieChart x:Name="chartRequests" Grid.Row="1" Margin="20" LegendLocation="Right" DataClick="chartRequests_DataClick">
            <lvc:PieSeries Title="Количество заявок" Values="{Binding RequestsCount}" DataLabels="True"/>
        </lvc:PieChart>
    </Grid>
</Page>
