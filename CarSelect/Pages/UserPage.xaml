<Page x:Class="CarSelect.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarSelect.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBox x:Name="tbLogin" Text="{Binding User.Login}"/>
            <TextBox x:Name="tbNewPassword" />
            <TextBox x:Name="tbLastName" Text="{Binding User.LastName}"/>
            <TextBox x:Name="tbFirstName" Text="{Binding User.FirstName}"/>
            <TextBox x:Name="tbPatronymic" Text="{Binding User.Patronymic}"/>

            <ComboBox x:Name="cbRole" ItemsSource="{Binding Roles}" 
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding User.Role}"/>
        </StackPanel>

        <Button x:Name="btnSave" Content="Сохранить"
                Grid.Column="1" Click="btnSave_Click"/>
    </Grid>
</Page>
